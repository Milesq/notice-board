  	function isAdmin(email) {
      return email in [
        "wmilosz88@gmail.com",
        "jacek.mierzejewski@gmail.com",
        "xxxbagnoxxx@gmail.com",
        "piotr.milczarek.g@gmail.com",
        "ludwiczak81@gmail.com"
